//1
let x=0;
let a=new Promise(function(resolve,reject){
   setTimeout(() => {
      resolve(x=10);
   }, 3000);
   
});

a
.then(function(){
   console.log(x);
});

//2
let x=0;
let a=new Promise(function(resolve,reject){
   setTimeout(() => {
      resolve(x=10);
      reject(x=1000);
   }, 3000);
   
});

a
.then(function(){
   console.log(x);
});

//3 (выводит только успешность, не пойму почему)
let min=1, max=10;
let a = new Promise((resolve, reject) => {
  let randomNumber = Math.random(min,max);
setTimeout(() => {
    if(randomNumber <= 5) {
      resolve();
    } else if(randomNumber >= 6) {
      reject();
  }
  }, randomNumber*1000);
});
a
.catch((error)=>{
	console.log('unsuccessfully');
})
.then((result)=>{
   console.log('successfully');
})
